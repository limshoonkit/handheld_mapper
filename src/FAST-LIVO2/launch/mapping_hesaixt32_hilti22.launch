<launch>

	<arg name="rviz" default="true" />
	<arg name="camera_config" default="$(find fast_livo)/config/camera_fisheye_HILTI22.yaml" />

	<rosparam command="load" file="$(find fast_livo)/config/HILTI22.yaml" />

	<node pkg="fast_livo" type="fastlivo_mapping" name="laserMapping" output="screen"
		args="-camera_config $(arg camera_config)">
		<!-- 设置glibc malloc优化 -->
		<env name="MALLOC_TRIM_THRESHOLD_" value="1073741824" />
		<env name="MALLOC_ARENA_MAX" value="4" />
	</node>

	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz"
			args="-d $(find fast_livo)/rviz_cfg/hilti.rviz" />
	</group>
</launch> 	